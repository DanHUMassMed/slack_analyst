@Article{
author ={Aniruddha Das and Pankaj Thapa and Ulises Santiago and Nilesh Shanmugam and Katarzyna Banasiak and Katarzyna Dabrowska and Hendrik Nolte and Natalia A. Szulc and Rose M. Gathungu and Dominik Cysewski and Marcus Krüger and Michal Dadlez and Marcin Nowotny and Carlos J. Camacho and Thorsten Hoppe and Wojciech Pokrzywa},
title ={Heterotypic Assembly Mechanism Regulates CHIP E3 Ligase Activity},
