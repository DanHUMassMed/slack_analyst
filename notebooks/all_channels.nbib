@Article{
author ={West, Robert and Delattre, Hadrien and Noor, Elad and Feliu, Elisenda and Soyer, Orkun},
title ={Dynamics of co-substrate pools can constrain and regulate metabolic fluxes},
year ={},
doi ={},
abstract ={Cycling of co-substrates, whereby a metabolite is converted among alternate forms via different reactions, is ubiquitous in metabolism. Several cycled co-substrates are well known as energy and electron carriers (e.g. ATP and NAD(P)H), but there are also other metabolites that act as cycled co-substrates in different parts of central metabolism. Here, we develop a mathematical framework to analyse the effect of co-substrate cycling on metabolic flux. In the cases of a single reaction and linear pathways, we find that co-substrate cycling imposes an additional flux limit on a reaction, distinct to the limit imposed by the kinetics of the primary enzyme catalysing that reaction. Using analytical methods, we show that this additional limit is a function of the total pool size and turnover rate of the cycled co-substrate. Expanding from this insight and using simulations, we show that regulation of these two parameters can allow regulation of flux dynamics in branched and coupled pathways. To support these theoretical insights, we analysed existing flux measurements and enzyme levels from the central carbon metabolism and identified several reactions that could be limited by the dynamics of co-substrate cycling. We discuss how the limitations imposed by co-substrate cycling provide experimentally testable hypotheses on specific metabolic phenotypes. We conclude that measuring and controlling co-substrate dynamics is crucial for understanding and engineering metabolic fluxes in cells.},
keywords ={},
note ={https://danhiggins.org/data/papers_other-metabolism/elife-84379-v1.pdf},
journal ={},
volume ={},
pages ={},
source={d3d0b35578ea57986650b317de1d83be2df4aedcf4b2111f8760abcad66ced6b}
}

@Article{
author ={Junxiang Zhou and Mei Duan and Xin Wang and Fengxia Zhang and Hejiang Zhou and Tengfei Ma and Qiuyuan Yin and Jie Zhang and Fei Tian and Guodong Wang and Chonglin Yang},
title ={A feedback loop engaging propionate catabolism intermediates controls mitochondrial morphology},
year ={2022},
doi ={10.1038/s41556-022-00883-2},
abstract ={itochondrial oxidation of carbohydrates, fatty acids and amino acids generates acetyl-coA and many organic acid intermediates, which are oxidized through the tricarboxylic acid cycle or used for macromolecule biosynthesis. Abnormal accumulation of such intermediates often leads to organic acidurias or organic acidaemias 1-3. Although patients with organic acidaemia frequently exhibit features of mitochondrial disorders 1 , it is largely unknown how individual organic acid intermediates affect mitochondrial homeostasis. D-2HG is a mitochondrial organic acid derived from the tricarboxylic acid cycle intermediate α-ketoglutarate (α-KG). In humans, D-2HG is produced together with succinic semialdehyde (SSA) by the hydroxyacid-oxoacid transhydrogenase (HOT; encoded by ADHFE1), using γ-hydroxybutyrate (GHB) and α-KG as co-substrates 4. D-2HG is rapidly converted back to α-KG by D-2HG dehydrogenase (D2HGDH). D-2HG accumulation leads to a rare and devastating developmental disorder, d-2-hydroxyglutaric aciduria (D-2-HGA) 5,6. D-2HG is also implicated in cancers with neomorphic gain-of-function mutations of the isocitrate dehydrogenases IDH1 and IDH2, which plays debatable roles in tumorigenesis 7-10. The effects of D-2HG on mitochondrion-related disease pathology are not currently understood. Similar to D-2HG, 3-HP is a highly toxic intermediate of mitochondrial oxidation of branched-chain amino acids (BCAAs), propionate and odd-chain fatty acids 11,12. 3-HP is the diagnostic metabolite in propionic acidaemia (PPA) and methylmalonic acidaemia (MMA), two lethal genetic disorders that result from defective propionate catabolism 13-15. Nevertheless, it is not understood how 3-HP exerts adverse effects on mitochondria. Notably, 3-HP is a structural analogue of GHB, a co-substrate for HOT to produce D-2HG. Whether D-2HG and 3-HP are functionally linked to affect mitochondria is unknown. The nematode C. elegans, which is normally fed on Escherichia coli strains that also colonize the intestine, provides an excellent system for dissecting the metabolic and the dietary and gut bacterial effects on mitochondria 16-23. Worms fed on bacteria with or without vitamin B12 (VB12) adopt VB12-dependent or VB12-independent pathways to break down propionate in mitochondria and generate a variety of metabolic intermediates 24. Here, we use unbiased genetic screening to reveal genes and metabolites that affect mitochondrial homeostasis in C. elegans. We identify a mitochondrion-damaging feedback loop that involves D-2HG and 3-HP. We further reveal that dietary and gut bacteria affect mitochondrial health by modulating host 3-HP levels. These results provide mechanistic insights into human diseases related to D-2HG and 3-HP.},
keywords ={},
note ={https://danhiggins.org/data/papers_other-metabolism/s41556-022-00883-2.pdf},
journal ={Nature Cell Biology},
volume ={24},
pages ={526-537},
source={2cab307d735a6a2eea13fada78085b208c0ad34188bb7be23b05be07f22cd872}
}

