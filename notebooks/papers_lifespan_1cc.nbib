@Article{
author ={Jacques Serizay and Yan Dong and Jürgen Jänes and Michael Chesney and Chiara Cerrato and Julie Ahringer},
title ={Tissue-specific profiling reveals distinctive regulatory architectures for ubiquitous, germline and somatic genes},
year ={2020},
doi ={10.1101/2020.02.20.958579},
abstract ={Despite increasingly detailed knowledge of gene expression patterns, the regulatory architectures that drive them are not well understood. To address this, we compared transcriptional and regulatory element activities across five adult tissues of C. elegans , covering ~90% of cells, and defined regulatory grammars associated with ubiquitous, germline and somatic tissue-specific gene expression patterns. We find architectural features that distinguish two major promoter types. Germline-specific and ubiquitously-active promoters have well positioned +1 and-1 nucleosomes associated with a periodic 10-bp WW signal. Somatic tissue-specific promoters lack these features, have wider nucleosome depleted regions, and are more enriched for core promoter elements, which surprisingly differ between tissues. A 10-bp periodic WW signal is also associated with +1 nucleosomes of ubiquitous promoters in fly and zebrafish but is not detected in mouse and human. Our results demonstrate fundamental differences in regulatory architectures of germline-active and somatic tissue-specific genes and provide a key resource for future studies.},
keywords ={Chromatin, regulation, accessibility, transcription, tissue-specific},
note ={https://danhiggins.org/data/papers_lifespan_1cc/2020.02.20.958579v1.full.pdf},
journal ={},
volume ={N/A},
pages ={N/A},
source={6a7a75838656cf4fe9b4878bc262408a0b84f9b2ea6d9c1b24e09b63cd1df5d5}
}

@Article{
author ={Max-Hinderk Schuler and Francesca Di Bartolomeo and Christoph U. Mårtensson and Günther Daum and Thomas Becker},
title ={Phosphatidylcholine Affects Inner Membrane Protein Translocases of Mitochondria},
year ={2016},
doi ={10.1074/jbc.M116.722694},
abstract ={Two protein translocases transport precursor proteins into or across the inner mitochondrial membrane. The presequence translocase (TIM23 complex) sorts precursor proteins with a cleavable presequence either into the matrix or into the inner membrane. The carrier translocase (TIM22 complex) inserts multispanning proteins into the inner membrane. Both protein import pathways depend on the presence of a membrane potential, which is generated by the activity of the respiratory chain. The non-bilayer-forming phospholipids cardiolipin and phosphatidylethanolamine are required for the activity of the respiratory chain and therefore to maintain the membrane potential for protein import. Depletion of cardiolipin further affects the stability of the TIM23 complex. The role of bilayer-forming phospholipids like phosphatidylcholine (PC) in protein transport into the inner membrane and the matrix is unknown. Here, we report that import of presequence-containing precursors and carrier proteins is impaired in PC-deficient mitochondria. Surprisingly, depletion of PC does not affect stability and activity of respiratory supercomplexes, and the membrane potential is maintained. Instead, the dynamic TIM23 complex is destabilized when the PC levels are reduced, whereas the TIM22 complex remains intact. Our analysis further revealed that initial precursor binding to the TIM23 complex is impaired in PC-deficient mitochondria. We conclude that reduced PC levels differentially affect the TIM22 and TIM23 complexes in mitochondrial protein transport.},
keywords ={},
note ={https://danhiggins.org/data/papers_lifespan_1cc/zbc18718.pdf},
journal ={Journal of Biological Chemistry},
volume ={291},
pages ={18718-18729},
source={ed10d3cc69ff4be09ffb3e1ac4cb1ff4d1dccc35dcc3bc78bfee244b79915ee4}
}

